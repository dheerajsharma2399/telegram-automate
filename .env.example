#############################################
# Example environment file for telegram-automate
# Copy this to `.env` and fill in secret values.
#############################################

# -----------------------------
# Telegram / Bot configuration
# -----------------------------
# Your Telegram API credentials (from https://my.telegram.org)
TELEGRAM_API_ID=
TELEGRAM_API_HASH=

# Phone number associated with your Telegram account (for Telethon monitor)
TELEGRAM_PHONE=

# Bot token from BotFather for the bot process
TELEGRAM_BOT_TOKEN=

# The group(s) to monitor. You may provide multiple group usernames or numeric IDs
# as a comma-separated list. Examples:
# TELEGRAM_GROUP_USERNAMES=@group1,@group2
# TELEGRAM_GROUP_USERNAMES=-123456789,-987654321
TELEGRAM_GROUP_USERNAMES=

# Comma-separated list of Telegram user IDs that are authorized to run admin commands
# Example: AUTHORIZED_USER_IDS=123456789,987654321
AUTHORIZED_USER_IDS=

# Optional: admin user id used by older flows
ADMIN_USER_ID=

# -----------------------------
# OpenRouter / LLM configuration
# -----------------------------
# OpenRouter API key (or any compatible LLM API key you use)
OPENROUTER_API_KEY=
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet
OPENROUTER_FALLBACK_MODEL=openai/gpt-4o-mini

# -----------------------------
# Google Sheets configuration (optional)
# -----------------------------
# If using Google Sheets sync, set the JSON service account credentials
# as a single-line JSON string (careful with quotes) or provide as a secret file
# Example (single-line):
# GOOGLE_CREDENTIALS_JSON={"type": "service_account", "project_id": "...", ...}
GOOGLE_CREDENTIALS_JSON=

# ID/key of the target spreadsheet
SPREADSHEET_ID=

# Friendly name for the spreadsheet (optional)
SPREADSHEET_NAME="Job Postings Database"

# -----------------------------
# Database Configuration (Supabase PostgreSQL)
# -----------------------------
# Supabase PostgreSQL connection string
# Format: postgresql://postgres:[PASSWORD]@[HOST]:[PORT]/postgres
DATABASE_URL=postgresql://postgres:your_password@db.your-project.supabase.co:5432/postgres

# Local SQLite path (legacy - only used if DATABASE_URL is not set)
DATABASE_PATH=jobs.db

# Batch size (how many messages to process per run)
BATCH_SIZE=10

# How often (in minutes) the scheduled processor runs
PROCESSING_INTERVAL_MINUTES=5

# Max retries for external calls (LLM, Sheets)
MAX_RETRIES=3

# -----------------------------
# Container & Deployment Configuration
# -----------------------------
# Container type: 'all', 'web', 'bot'
CONTAINER_TYPE=all

# Bot run mode: 'webhook' or 'polling'
BOT_RUN_MODE=webhook

# Web server port (default: 9501)
PORT=9501

# Flask environment: 'development' or 'production'
FLASK_ENV=production

# -----------------------------
# Misc / Admin
# -----------------------------
# Example: add any extra secrets here
